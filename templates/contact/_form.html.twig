<form action="{{ path('app_contact_submit') }}" method="POST" data-controller="contact" data-action="submit->contact#submit" class="rounded-5 framed shadow-lg p-4 my-5" style="width: 80%; min-width: 300px; max-width: 700px;">

	<h2 class="fs-1 fw-bold mt-3 mb-0">Nous contacter</h2>

	<div class="mt-3 text-center" data-contact-target="feedback"></div>

	<div class="input-group my-4 mx-auto" style="max-width: 500px;">
		<span class="d-none d-sm-inline-flex d-lg-none justify-content-center input-group-text rounded-start-4 shadow fs-1" style="width: 50px;">
			{{ ux_icon('line-md:account') }}
		</span>
		<span class="d-none d-lg-inline-flex justify-content-center input-group-text rounded-start-4 shadow fs-1" style="width: 60px;">
			{{ ux_icon('line-md:account') }}
		</span>

		<div class="form-floating">
			<input type="text" class="form-control text-start ps-4 rounded-end-4 shadow rounded-xs-start" id="name" name="name" placeholder="Vos nom et prénom" aria-label="Nom complet" required aria-required="true">
			<label for="name">Prénom et nom</label>
		</div>
	</div>

	<div class="input-group my-4 mx-auto" style="max-width: 500px;">
		<span class="d-none d-sm-inline-flex d-lg-none justify-content-center input-group-text rounded-start-4 shadow fs-1" style="width: 50px;">
			{{ ux_icon('line-md:email-twotone') }}
		</span>
		<span class="d-none d-lg-inline-flex justify-content-center input-group-text rounded-start-4 shadow fs-1" style="width: 60px;">
			{{ ux_icon('line-md:email-twotone') }}
		</span>

		<div class="form-floating">
			<input type="email" class="form-control text-start ps-4 rounded-end-4 shadow rounded-xs-start" name="email" id="email" placeholder="nom@exemple.com" autocomplete="email" required aria-required="true" aria-label="Adresse email" autofocus>
			<label for="email">Adresse email</label>
		</div>
	</div>

	<div class="input-group my-4 mx-auto" style="max-width: 500px; min-height: 200px">
		<span class="d-none d-sm-inline-flex d-lg-none justify-content-center align-items-start pt-2 input-group-text rounded-start-4 shadow fs-1 input-group-text" style="width: 50px;">
			{{ ux_icon('line-md:chat-round-dots-twotone') }}
		</span>
		<span class="d-none d-lg-inline-flex justify-content-center align-items-start pt-2 input-group-text rounded-start-4 shadow fs-1 input-group-text" style="width: 60px;">
			{{ ux_icon('line-md:chat-round-dots-twotone') }}
		</span>

		<div class="form-floating">
			<textarea name="message" class="form-control text-start ps-4 rounded-end-4 shadow rounded-xs-start" placeholder="Message" rows="4" required style="min-height: 200px" id="message"></textarea>
			<label for="message">Votre message</label>
		</div>
	</div>

	<input type="hidden" name="_csrf_token" value="{{ csrf_token('contact') }}">

	<button class="btn btn-lg btn-primary shadow mx-auto mt-2 mb-4 scaleOnFocusAndHover" type="submit" aria-label="Envoyer votre message aux équipes d'EcoRide">
		Envoyer
	</button>

</form>
