{% extends 'base.html.twig' %}

{% block title %}Espace utilisateur EcoRide
{% endblock %}

{% block main %}

	<div class="row container mx-auto">

		<header class="col-md-4 mx-auto pe-lg-5" style="max-width: 350px;">
			{% include "profile/_hero.html.twig" %}
			{% include "profile/_menu.html.twig" %}
		</header>

		<div class="col-md-8 framed flex-fill rounded-5 shadow-lg mt-5">


			<section class="collapse {{ activeTab is same as 'informations' ? 'show' }}" id="infosPassager">
				{% include "profile/_passengerForm.html.twig" %}
			</section>

			<section class="collapse {{ activeTab is same as 'devenir-chauffeur' ? 'show' }}" id="devenirChauffeur">
				{% include "profile/_driverForm.html.twig" %}
			</section>

			<section class="collapse {{ activeTab is same as 'historique-trajets' ? 'show' }}" id="historiqueTrajets">
				{% include "profile/_rideHistory.html.twig" %}
			</section>

		</div>

	</div>

{% endblock %}
